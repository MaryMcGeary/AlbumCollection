@model IEnumerable<AlbumCollection.Models.Album>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Main.css" rel="stylesheet" />
</head>
<body>
    <h1>My Album Index View</h1>
    <p>
        Here's all my albums.
    </p>
    <ol>
        @foreach (var album in Model) 
        {
            <li><a href="/Album/Details/@album.AlbumId">@album.AlbumName</a></li>
        }
    </ol>
</body>
</html>
